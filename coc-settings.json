{
  "coc.source.file.shortcut": "File",
   "coc.source.around.shortcut": "?",
   "suggest.labelMaxLength": 80,
   //"suggest.disableKind": true,
   "suggest.completionItemKindLabels": {
       "keyword": "\uf1de keyword",
       "variable": "\ue79b variable",
       "value": "\uf89f value",
       "operator": "\u03a8 operator",
       "constructor": "\uf0ad constructor",
       "function": "\u0192 function",
       "reference": "\ufa46 reference",
       "constant": "\uf8fe constant",
       "method": "\uf09a method",
       "struct": "\ufb44 struct",
       "class": "\uf0e8 class",
       "interface": "\uf417 interface",
       "text": "\ue612 text",
       "enum": "\uf435 enum",
       "enumMember": "\uf02b enumMember",
       "module": "\uf40d module",
       "color": "\ue22b color",
       "property": "\ue624 property",
       "field": "\uf9be field",
       "unit": "\uf475 unit",
       "event": "\ufacd event",
       "file": "\uf723 file",
       "folder": "\uf114 folder",
       "snippet": "\ue60b snippet",
       "typeParameter": "\uf728 typeParameter",
       "default": "\uf29c default"
    },
    "jedi.executable.command": "~/.local/bin/jedi-language-server",
    "languageserver": { 
        // C++
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache",
                    "format": "binary"
                },
                "client": {
                    "snippetSupport": true
                },
                "index": {
                    "onChange": true
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": [
                "build/"
            ],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        }
    }
}
